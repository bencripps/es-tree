{
  "name": "es6tree",
  "version": "0.0.1",
  "description": "JS2015 Tree Component",
  "jshintConfig": {
    "predef": [],
    "node": "true",
    "jasmine": "true"
  },
  "devDependencies": {
    "browserify": "latest",
    "watchify": "latest",
    "babelify": "^6.3.0"
  },
  "dependencies": {
  },
  "scripts": {
    "build-js": "browserify src/js/*.js -t babelify --outfile dist/js/main.js",
    "watch-js": "watchify src/js/*.js -t babelify --outfile dist/js/main.js",
    "build-styles": "sass src/sass/main.scss dist/css/main.css",
    "watch-styles": "sass --watch src/sass/main.scss:dist/css/main.css"
  }
}
